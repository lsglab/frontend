{
	"name": "musin-frontend",
	"version": "0.0.1",
	"private": true,
	"description": "This is our new school website frontend",
	"license": "AGPL-3.0-only",
	"scripts": {
		"do:autofix": "run-s format lint do:favicon",
		"do:build": "run-s do:autofix run:build",
		"do:commit": "yarn git:commit",
		"do:cypress": "cypress open",
		"do:dev": "run-s do:autofix run:hot",
		"do:export": "run-s do:autofix run:export",
		"do:favicon": "run-s favicon:update favicon:inject",
		"do:master": "yarn git:master",
		"do:push": "yarn git:push",
		"do:serve": "run-s do:autofix run:serve",
		"do:start": "yarn run:start",
		"do:sync": "yarn git:sync",
		"do:testing": "run-s prettier:report eslint:report typescript:report test favicon:ci",
		"eslint:fix": "eslint --fix --cache --ext svelte,js,mjs .",
		"eslint:report": "yarn eslint --cache --ext svelte,js,mjs .",
		"favicon:ci": "yarn real-favicon check-for-update --fail-on-update faviconData.json",
		"favicon:generate": "yarn real-favicon generate faviconDescription.json faviconData.json static",
		"favicon:inject": "run-s favicon:inject:*",
		"favicon:inject:do": "yarn real-favicon inject faviconData.json src src/assets/template.html",
		"favicon:inject:prettify": "prettier --write --plugin-search-dir=. src/template.html",
		"favicon:update": "yarn real-favicon check-for-update faviconData.json",
		"format": "run-s format:*",
		"format:code": "run-s format:code:*",
		"format:code:prettier": "yarn prettier:fix",
		"git:add": "git add -A",
		"git:commit": "run-s git:commit:*",
		"git:commit:checks": "run-s do:autofix git:add",
		"git:commit:do": "cz",
		"git:master": "run-s git:master:merge git:add git:master:commit",
		"git:master:commit": "git commit -m 'fix: merge from master'",
		"git:master:merge": "git merge master --no-commit",
		"git:push": "git push --prune",
		"git:sync": "yarn warn:soydows && ./Scripts/sync.sh",
		"lint": "run-s lint:*",
		"lint:scripts": "run-s lint:scripts:*",
		"lint:scripts:eslint": "yarn eslint:fix",
		"lint:styles": "run-s lint:styles:*",
		"lint:styles:stylelint": "yarn stylelint:fix",
		"lint:styles:validate": "yarn stylelint:validate",
		"lint:typescript": "yarn typescript:validate",
		"prettier:fix": "prettier --write --plugin-search-dir=. ./**/*.{svelte,js,mjs,md,json,yml,html,css}",
		"prettier:report": "prettier --check --plugin-search-dir=. ./**/*.{svelte,js,mjs,md,json,yml,html,css}",
		"run:build": "cross-env NODE_ENV=production run-s run:build:*",
		"run:build:do": "sapper build --legacy",
		"run:export": "cross-env NODE_ENV=production run-s run:export:*",
		"run:export:do": "sapper export --legacy",
		"run:hot": "cross-env NODE_ENV=development run-s run:hot:*",
		"run:hot:do": "sapper dev",
		"run:serve": "run-s run:build run:start",
		"run:start": "cross-env NODE_ENV=production run-s run:start:*",
		"run:start:do": "node __sapper__/build",
		"stylelint:fix": "stylelint ./**/*.{html,css,scss,svelte} --fix --cache",
		"stylelint:report": "stylelint ./**/*.{html,css,scss,svelte} --cache",
		"stylelint:validate": "stylelint-config-prettier-check",
		"test": "start-server-and-test 'yarn run:serve' http://localhost:3000 'yarn test:run'",
		"test:run": "run-p --race test:run:*",
		"test:run:cypress": "cypress run",
		"typescript:report": "yarn svelte-check",
		"typescript:validate": "yarn svelte-check || true",
		"warn:soydows": "echo \"Warning: This will fail if you're on a non-unix-like operating system, or more specifically, Windows. Get WSL, or just install Linux directly.\""
	},
	"dependencies": {
		"compression": "^1.7.4",
		"cross-env": "^7.0.2",
		"esm": "^3.2.25",
		"polka": "next",
		"sirv": "^1.0.6"
	},
	"devDependencies": {
		"@babel/core": "^7.11.6",
		"@babel/plugin-proposal-class-properties": "^7.10.4",
		"@babel/plugin-proposal-optional-chaining": "^7.11.0",
		"@babel/plugin-syntax-dynamic-import": "^7.8.3",
		"@babel/preset-env": "^7.11.5",
		"@babel/preset-typescript": "^7.10.4",
		"@commitlint/cli": "^9.1.2",
		"@commitlint/config-conventional": "^9.1.2",
		"@rollup/plugin-babel": "^5.2.0",
		"@rollup/plugin-commonjs": "^15.0.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-legacy": "^2.0.0",
		"@rollup/plugin-node-resolve": "^9.0.0",
		"@rollup/plugin-replace": "^2.3.3",
		"@rollup/plugin-strip": "^2.0.0",
		"@tsconfig/svelte": "^1.0.10",
		"autoprefixer": "^9.8.6",
		"babel-eslint": "^10.1.0",
		"cli-real-favicon": "^0.0.8",
		"colorguard": "^1.2.1",
		"commitizen": "^4.2.1",
		"core-js": "^3.6.5",
		"cssnano": "^4.1.10",
		"cssnano-preset-advanced": "^4.0.7",
		"cypress": "^5.1.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.8.1",
		"eslint-config-airbnb-base": "^14.2.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-babel": "^5.3.1",
		"eslint-plugin-cypress": "^2.11.1",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-svelte3": "^2.7.3",
		"husky": "^4.2.5",
		"lint-staged": "^10.3.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^7.0.32",
		"postcss-fail-on-warn": "^0.1.0",
		"postcss-import": "^12.0.1",
		"postcss-url": "^8.0.0",
		"prettier": "^2.1.1",
		"prettier-plugin-package": "^1.0.0",
		"prettier-plugin-svelte": "^1.2.1",
		"rollup": "^2.26.10",
		"rollup-plugin-svelte": "^6.0.0",
		"rollup-plugin-terser": "^7.0.2",
		"sapper": "^0.28.4",
		"sass": "^1.26.10",
		"start-server-and-test": "^1.11.3",
		"stylelint": "^13.7.0",
		"stylelint-config-prettier": "^8.0.2",
		"svelte": "^3.24.1",
		"svelte-check": "^1.0.36",
		"svelte-preprocess": "^4.2.1",
		"tailwindcss": "^1.8.3",
		"tailwindcss-fluid": "^0.2.0",
		"tslib": "^2.0.1",
		"typescript": "^4.0.2"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS --verbose"
		}
	}
}
